<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Botón para buscar maestros -->

    <!-- Espacio entre el botón y la imagen -->

    <Button
        android:id="@+id/buttonAddTask"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:text="Buscar Maestros" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" /> <!-- Espacio entre elementos -->

    <!-- Logo de la aplicación -->
    <!-- Incorporando la imagen a.png -->
    android:elevation="8dp"
    android:contentDescription="@string/image_description"
    android:layout_gravity="center" /> <!-- Centrar la imagen -->

    <!-- Espacio entre la imagen y el MapView -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="348dp"
        android:layout_height="261dp"
        app:srcCompat="@drawable/a"

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" /> <!-- Espacio entre elementos -->

    <!-- Mapa -->
    <MapView
        android:id="@+id/mapView"
        android:layout_width="362dp"
        android:layout_height="223dp"
        android:baselineAligned="false" />

    <!-- Espacio entre el MapView y el botón de Modo Administrador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="32dp" /> <!-- Ajusta la altura según sea necesario -->

    <!-- Botón para ingresar al modo administrador -->
    <Button
        android:id="@+id/buttonAdminMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modo Administrador" />
</LinearLayout>