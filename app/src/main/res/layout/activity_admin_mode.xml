<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Maestro"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:paddingBottom="16dp"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Maestro"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"/>

    <EditText
        android:id="@+id/editTextRepairs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de Reparaciones"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"/>

    <EditText
        android:id="@+id/editTextBaseValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor Base"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"/>

    <Button
        android:id="@+id/buttonRegisterMaster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Maestro"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorPrimary"/>
</LinearLayout>